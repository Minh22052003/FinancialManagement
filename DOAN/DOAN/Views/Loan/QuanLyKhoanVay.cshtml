@model IEnumerable<DOAN.Models.LoanAccount>

@{
    ViewData["Title"] = "Danh sách khoản vay";
}

<h2>Danh sách khoản vay</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Loan Id</th>
            <th>Tên khách hàng</th>
            <th>Số tiền vay</th>
            <th>Số tiền duyệt</th>
            <th>Lãi suất</th>
            <th>Trạng thái</th>
            <th>Phương thức thanh toán</th>
            <th>Ngày tạo</th>
            <th>Ngày đáo hạn</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LoanId</td>
                <td>@(item.Customer?.FullName ?? "N/A")</td>
                <td>@item.LoanAmount.ToString("N2")</td>
                <td>@(item.ApprovedAmount.HasValue ? item.ApprovedAmount.Value.ToString("N2") : "Chưa duyệt")</td>
                <td>@(item.InterestRate.HasValue ? item.InterestRate.Value.ToString("N2") + "%" : "N/A")</td>
                <td>@item.LoanStatus</td>
                <td>@item.PaymentMethod</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@(item.DueDate.HasValue ? item.DueDate.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                <td>
                    <!-- Ví dụ các nút thao tác -->
                    <a asp-action="Details" asp-route-id="@item.LoanId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.LoanId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.LoanId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
