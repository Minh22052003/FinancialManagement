@model List<DOAN.Models.LoanAccount>

@{
    ViewData["Title"] = "Báo cáo danh sách tài khoản vay";
    var currentDate = DateTime.Now.Date;
}

<h2 class="mb-4 fw-bold">@ViewData["Title"]</h2>
<a href="@Url.Action("ExportToPdfAllNo", "Reports")" class="btn btn-primary mb-3">Xuất PDF</a>

<table class="table table-hover table-bordered shadow-sm rounded-3 overflow-hidden">
    <thead class="custom-table-header text-center align-middle">
        <tr>
            <th>Mã khoản vay</th>
            <th>Tên khách hàng</th>
            <th>Số tiền vay</th>
            <th>Ngày đến hạn</th>
            <th>Tình trạng</th>
        </tr>
    </thead>
    <tbody class="align-middle">
        @foreach (var item in Model)
        {
            // Nếu DueDate có giá trị, chuyển sang DateTime để so sánh, nếu không hiển thị "Chưa xác định"
            DateTime? dueDate = item.DueDate.HasValue
            ? item.DueDate.Value.ToDateTime(new TimeOnly(0, 0))
            : null;
            var status = "Chưa đến hạn";
            if (dueDate.HasValue)
            {
                status = currentDate > dueDate.Value.Date ? "Đến hạn" : "Chưa đến hạn";
            }
            <tr>
                <td>@item.LoanId</td>
                <td>@(item.Customer != null ? item.Customer.FullName : "Không có dữ liệu")</td>
                <td>@item.LoanAmount.ToString("N2")</td>
                <td>@(dueDate.HasValue ? dueDate.Value.ToString("dd/MM/yyyy") : "Chưa xác định")</td>
                <td>@status</td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .custom-table-header {
            background-color: #E6F0FF;
        }

            .custom-table-header th {
                color: #0056b3;
            }

        .table {
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 123, 255, 0.1);
        }
    </style>
}
