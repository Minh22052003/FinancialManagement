@model DOAN.DTOs.Account_DTO
@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center">Đăng nhập</h2>
        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="TenDangNhap"></label>
                <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" />
                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MatKhau"></label>
                <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
